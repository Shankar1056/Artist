<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/white"
    >

    <bigappcompany.com.artist.RippleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rv_color="@color/rippleColor"
        app:rv_centered="true"
        app:rv_rippleDuration="@integer/fast"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="1dp"
            app:cardCornerRadius="3dp"
            app:cardUseCompatPadding="false"
            >

    <LinearLayout

        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:background="@color/color1"
        android:orientation="vertical">




        <bigappcompany.com.artist.widgets.MyCustomMedTextView
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:layout_gravity="center"

            android:text="9:50 PM"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small" />
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="1dp"
            app:cardCornerRadius="3dp"
            android:layout_gravity="center"
            app:cardUseCompatPadding="false"
            >
        <bigappcompany.com.artist.widgets.MyCustomBoldTextView
            android:id="@+id/tvDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            android:text="22"
            android:textColor="@color/color1"
            android:background="@color/white"
            android:textSize="32sp" />
        </android.support.v7.widget.CardView>
        <bigappcompany.com.artist.widgets.MyCustomMedTextView
            android:id="@+id/tvMMYY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="02/2017"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small" />
        </LinearLayout>
            <bigappcompany.com.artist.widgets.MyCustomTextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-35dp"
                android:layout_marginTop="-20dp"
                android:text="NEW"
                android:rotation="-45"
                android:visibility="gone"
                android:id="@+id/tvLbl"
                android:textSize="@dimen/text_too_small"
                android:textColor="@color/white"
                android:background="@color/color2"
                android:gravity="bottom|center_horizontal"
                />
        </android.support.v7.widget.CardView>
        <bigappcompany.com.artist.widgets.MyCustomMedTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:text="Event"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_normal" />


    </bigappcompany.com.artist.RippleView>

</android.support.v7.widget.CardView>